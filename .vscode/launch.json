{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build2/hagl_pico_vgaboard_example",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "cwd": "${workspaceRoot}",
            "executable": "./build/hagl_pico_vgaboard_example.elf",
            "name": "Debug with OpenOCD",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "gdbPath": "gdb-multiarch",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2040.cfg"
            ],
            "searchDir": [
                "/usr/local/share/openocd/scripts/"
            ],
            // "showDevDebugOutput": "raw",
            "showDevDebugOutput": "none",
            "openOCDLaunchCommands": [
                "adapter speed 5000"
            ],
            "svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/rp2040.svd",
            // "runToEntryPoint": "main",
            // "postRestartCommands": [
            //     "break main",
            //     "continue"
            // ],
            "liveWatch": {
                // "enabled": true,
                "enabled": false,
                "samplesPerSecond": 4
            }
        }
    ]
}
